{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build && npm run export",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Shelf",
    "version": "0.1.2"
  },
  "tauri": {
    "allowlist": {
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "dialog": {
        "open": true
      },
      "window": {
        "setTitle": true,
        "setMinSize": true,
        "setSize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.shelf.dev",
      "publisher": "Tadgh Inc",
      "shortDescription": "Shelf Reader",
      "targets": "nsis",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis":{
          "headerImage": "../resources/logo_installer.bmp",
          "sidebarImage": "../resources/logo_installer.bmp",
          "installerIcon": "../resources/logo.ico",
          "installMode":"both"
        },
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Shelf",
        "width": 800,
        "minWidth": 710,
        "minHeight": 500
      }
    ]
  }
}
